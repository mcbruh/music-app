<h1>Create User</h1>

<form action="/users" method="post">
    <input 
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

    <label for="user_email">Email:</label>
    <input 
        type="text"
        name="user[email]"
        id="user_email">
    <br>

    <label for="user_password">Password:</label>
    <input 
        type="password"
        name="user[password]"
        id="user_password">
    <br>

    <input type="submit" value="Create User">
</form>